<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu_abu_terang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Judul Contact -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontak"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/biru_tua"
            android:layout_marginBottom="8dp" />

        <!-- Bagian Telepon -->
        <include
            android:id="@+id/contact_option_phone"
            layout="@layout/item_contact_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Bagian Email -->
        <include
            android:id="@+id/contact_option_email"
            layout="@layout/item_contact_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Judul Media Sosial -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Media Sosial"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/biru_tua"
            android:layout_marginBottom="8dp" />

        <!-- Bagian Twitter -->
        <include
            android:id="@+id/contact_option_facebook"
            layout="@layout/item_contact_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Bagian WhatsApp -->
        <include
            android:id="@+id/contact_option_whatsapp"
            layout="@layout/item_contact_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Bagian Instagram -->
        <include
            android:id="@+id/contact_option_instagram"
            layout="@layout/item_contact_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />






    </LinearLayout>
</ScrollView>