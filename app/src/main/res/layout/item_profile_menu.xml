<!-- app/src/main/res/layout/item_profile_menu.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            app:tint="@color/biru_muda_cerah"
            android:contentDescription="Menu Icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Menu"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/biru_tua" />

            <TextView
                android:id="@+id/tv_menu_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi singkat menu ini."
                android:textSize="14sp"
                android:textColor="@color/abu_abu_gelap" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            app:tint="@color/abu_abu_gelap"
            android:alpha="0.5"
            android:contentDescription="Navigate" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
